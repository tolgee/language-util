{
  "name": "@tginternal/language-util",
  "version": "1.0.7",
  "description": "Language data utility for Tolgee localization tool",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "test": "jest",
    "generateLanguageInfo": "ts-node --files scripts/generateLanguageInfo.ts",
    "generateFlags": "ts-node --files scripts/generateFlags.ts",
    "prettier": "prettier --write ./src ./scripts",
    "eslint": "eslint --ext .ts --ext .tsx --max-warnings 0 .",
    "build": "tsc --p tsconfig.build.json",
    "prepare": "husky install",
    "release": "semantic-release"
  },
  "files": [
    "lib/**",
    "flags/**"
  ],
  "author": "Jan Cizmar",
  "license": "MIT",
  "devDependencies": {
    "@babel/preset-typescript": "^7.13.0",
    "@formatjs/intl-displaynames": "^5.1.3",
    "@formatjs/intl-getcanonicallocales": "^1.7.0",
    "@formatjs/intl-locale": "^2.4.30",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.12.2",
    "@typescript-eslint/parser": "^4.26.1",
    "cldr-core": "^39.0.0",
    "country-flag-emoji": "^1.0.3",
    "download-git-repo": "^1.1.0",
    "eslint": "^7.28.0",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "jest": "^27.0.4",
    "prettier": "^2.8.8",
    "pretty-quick": "^3.1.0",
    "semantic-release": "^23.0.8",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "@formatjs/intl-getcanonicallocales": "^1.7.0",
    "latinize": "^0.5.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tolgee/language-util.git"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "package-lock.json",
            "CHANGELOG.md"
          ]
        }
      ]
    ],
    "branches": [
      {
        "name": "main",
        "channel": "latest",
        "prerelease": false
      }
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
